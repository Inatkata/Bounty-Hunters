@model BountyHunters.Web.ViewModels.BountyHunter.AddBountyHunterModel


<h1>Create Bounty Hunter</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rank"></label>
        <input asp-for="Rank" class="form-control" />
        <span asp-validation-for="Rank" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bio"></label>
        <textarea asp-for="Bio" class="form-control"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Cancel</a>