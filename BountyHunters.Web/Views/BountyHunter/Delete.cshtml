@model BountyHunters.Data.Models.BountyHunter

@{
    ViewData["Title"] = "Delete Bounty Hunter";
}

<h1>Delete Bounty Hunter</h1>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this bounty hunter?</p>
    <h2>@Model.Name</h2>
    <p><strong>Rank:</strong> @Model.Rank</p>
    <p><strong>Bio:</strong> @Model.Bio</p>
    <p><strong>Capture Count:</strong> @Model.CaptureCount</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>