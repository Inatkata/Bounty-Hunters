@using BountyHunters.Web.ViewModels
@model IEnumerable<BountyHunters.Web.ViewModels.Criminal.AddCriminalInputModel>

<h1>Criminals</h1>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Crime Type</th>
        <th>Bounty</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var criminal in Model)
    {
        <tr>
            <td>@criminal.Name</td>
            <td>@criminal.CrimeType</td>
            <td>@criminal.Bounty</td>
            <td>@criminal.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@criminal.Id">Details</a>
                <a asp-action="Edit" asp-route-id="@criminal.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@criminal.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Criminal</a>
