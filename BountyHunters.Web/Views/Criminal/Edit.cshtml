@model BountyHunters.Data.Models.Criminal
@{
    ViewData["Title"] = "Edit Criminal";
}


<h1>Edit Criminal</h1>

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CrimeType"></label>
        <input asp-for="CrimeType" class="form-control" />
        <span asp-validation-for="CrimeType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bounty"></label>
        <input asp-for="Bounty" class="form-control" type="number" />
        <span asp-validation-for="Bounty" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="At Large">At Large</option>
            <option value="Captured">Captured</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CaptureDate"></label>
        <input asp-for="CaptureDate" class="form-control" type="date" />
        <span asp-validation-for="CaptureDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
