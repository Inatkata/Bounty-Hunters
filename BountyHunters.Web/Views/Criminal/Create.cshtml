@using BountyHunters.Web.ViewModels.Criminal
@model AddCriminalInputModel
<h1>Create Criminal</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CrimeType"></label>
        <input asp-for="CrimeType" class="form-control" />
        <span asp-validation-for="CrimeType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bounty"></label>
        <input asp-for="Bounty" class="form-control" />
        <span asp-validation-for="Bounty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option>At Large</option>
            <option>Captured</option>
            <option>Deceased</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CaptureDate"></label>
        <input asp-for="CaptureDate" class="form-control" type="date" />
        <span asp-validation-for="CaptureDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>