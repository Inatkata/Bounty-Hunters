@model BountyHunters.Data.Models.Criminal

@{
    ViewData["Title"] = "Delete Criminal";
}

<h1>Delete Criminal</h1>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this criminal?</p>
    <h2>@Model.Name</h2>
    <p><strong>Crime Type:</strong> @Model.CrimeType</p>
    <p><strong>Bounty:</strong> $@Model.Bounty</p>
    <p><strong>Status:</strong> @Model.Status</p>
    @if (Model.CaptureDate.HasValue)
    {
        <p><strong>Capture Date:</strong> @Model.CaptureDate.Value.ToString("MMMM dd, yyyy")</p>
    }
    else
    {
        <p><strong>Capture Date:</strong> Not Captured</p>
    }
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>