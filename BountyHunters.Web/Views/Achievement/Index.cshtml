@using BountyHunters.Web.ViewModels.Achievement
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BountyHunters.Web.ViewModels.Achievement>

@{
    ViewData["Title"] = "Achievements";
}

<h1>Achievements</h1>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Date Achieved</th>
        <th>Bounty Hunter</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var achievement in Model)
    {
        <tr>
            <td>@achievement.Name</td>
            <td>@achievement.Description</td>
            <td>@achievement.DateAchieved.ToShortDateString()</td>
            <td>@achievement.BountyHunterName</td>
            <td>
                <a asp-action="Details" asp-route-id="@achievement.Id" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@achievement.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Achievement</a>