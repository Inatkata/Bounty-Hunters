@model BountyHunters.Web.ViewModels.Achievement.AchievementViewModel

@{
    ViewData["Title"] = "Achievement Details";
}

<h1>Achievement Details</h1>

<div>
    <h2>@Model.Name</h2>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Date Achieved:</strong> @Model.DateAchieved.ToString("MMMM dd, yyyy")</p>
    <p><strong>Bounty Hunter:</strong> @Model.BountyHunterName</p>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>