@model BountyHunters.Web.ViewModels.Achievement.AddAchievementInputModel
@{
    ViewData["Title"] = "Edit Achievement";
}

<h1>Edit Achievement</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateAchieved"></label>
        <input asp-for="DateAchieved" type="date" class="form-control" />
        <span asp-validation-for="DateAchieved" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BountyHunterId">Bounty Hunter</label>
        <select asp-for="BountyHunterId" class="form-control" asp-items="ViewBag.BountyHunters"></select>
        <span asp-validation-for="BountyHunterId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>