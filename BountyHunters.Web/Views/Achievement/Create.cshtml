@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BountyHunters.Web.ViewModels.Achievement.AchievementViewModel
@{
    ViewData["Title"] = "Create Achievement";
}

<h1>Create Achievement</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateAchieved"></label>
        <input asp-for="DateAchieved" class="form-control" type="date" />
        <span asp-validation-for="DateAchieved" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BountyHunterId"></label>
        <select asp-for="BountyHunterId" asp-items="ViewBag.BountyHunters" class="form-control"></select>
        <span asp-validation-for="BountyHunterId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>